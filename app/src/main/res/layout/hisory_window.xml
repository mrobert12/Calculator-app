<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="285dp"
    android:layout_centerVertical="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/history_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"
        android:textAlignment="center"
        android:textSize="30sp"
        >

    </TextView>
    <TextView
        android:id="@+id/first_equation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_title"
        android:textSize="30sp"
        android:textAlignment="textEnd"
        >

    </TextView>
    <TextView
        android:id="@+id/second_equation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_equation"
        android:textSize="30sp"
        android:textAlignment="textEnd"
        >

    </TextView>
    <TextView
        android:id="@+id/third_equation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_equation"
        android:textSize="30sp"
        android:textAlignment="textEnd"
        >

    </TextView>
    <TextView
        android:id="@+id/fourth_equation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third_equation"
        android:textSize="30sp"
        android:textAlignment="textEnd"
        >

    </TextView>

    <TextView
        android:id="@+id/fifth_equation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourth_equation"
        android:layout_marginTop="-2dp"
        android:textAlignment="textEnd"
        android:textSize="30sp">

    </TextView>

    <Button
        android:id="@+id/clear_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fifth_equation"
        android:backgroundTint="@color/white"
        android:text="Clear"
        android:textColor="@color/black"
        android:textSize="20sp">
    </Button>
</RelativeLayout>